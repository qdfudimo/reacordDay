/* pages/mine/index.wxss */
.container {
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
  position: relative;
}

.background_image {
  position: absolute;
  width: 100%;
  height: 100%;
}

.main {
  box-sizing: border-box;
  min-height: 0px;
  color: #fff;
  z-index: 9999;
  position: relative;
  z-index: 1;
}

.con {
  box-sizing: border-box;
  width: 100%;
  top: 0;
  display: flex;
  background-color: transparent;
}

.content {
  width: 100%;
}

.content_top {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.user_avtar {
  padding-left: 32rpx;
  display: flex;
  align-items: center;
  /* width: 100%; */
}

.user_avtar .avtar {
  width: 72rpx;
  height: 72rpx;
}

.userName {
  font-size: 10px;
  margin-left: 12px;
  color: #ccc;
}

.background {
  box-sizing: border-box;
  width: 200rpx;
  padding-left: 40rpx;
  /* background-color: rgb(153, 153, 153,.4); */
  background: linear-gradient(60deg, #009688, yellowgreen, pink, #03a9f4, #9c27b0, #8bc34a);
  height: 28px;
  line-height: 28px;
  border-bottom-left-radius: 14px;
  border-top-left-radius: 14px;
  font-size: 14px;
}

.selectBackground {
  position: fixed;
  bottom: 48px;
  left: 0;
  height: 140px;
  width: 100%;
  background-color: #fff;
  padding: 10px;
  padding-top: 20px;
  box-sizing: border-box;
  border-top-left-radius: 12px;
  border-top-right-radius: 12px;
}
.flex-view{
  display:flex; 
  flex-wrap: nowrap;
}
.selectImg {
  width: 75px;
  border-radius: 8px;
  overflow: hidden;
  margin-right: 8px;
  position: relative;
  display:inline-block;
}
.selectImg:first-child::after {
  content: "默认背景";
  position: absolute;
  bottom: 8rpx;
  right: 2px;
  font-size: 14px;
  color: #999;
}
.addImg {
  box-sizing: border-box;
  border: 1px solid #ccc;
  font-size: 12px;
  color: #999;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.addImg text {
  margin-bottom: 2px;
}