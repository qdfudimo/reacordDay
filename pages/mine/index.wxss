/* pages/mine/index.wxss */
.container {
    width: 100%;
    height: 100%;
    margin: 0;
    padding: 0;
    position: relative;
}

.background_image {
    position: absolute;
    width: 100%;
    height: 100%;
}

.main {
    box-sizing: border-box;
    min-height: 0px;
    color: #fff;
    z-index: 9999;
    position: relative;
    z-index: 1;
}

.noColor {
    background-color: rgba(204, 204, 204, .6);
}

.con {
    box-sizing: border-box;
    width: 100%;
    top: 0;
    display: flex;
    background-color: transparent;
}

.content {
    width: 100%;
}

.content_top {
    padding-top: 10px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-bottom: 20px;
    box-shadow: 0rpx 4rpx 10rpx 0rpx rgba(85, 85, 85, 0.10);
}

.details {
    margin: 0 32rpx;
    margin-top: 26px;
    min-height: 400px;
    background-color: #fff;
    border-top-left-radius: 12px;
    border-top-right-radius: 12px;
    padding: 0 20px;
}

.diary {
    color: #666;
    display: flex;
    justify-content: space-between;
    padding: 14px 0;
    border-bottom: 1px solid #e6e6e6;
}

.setting {
    padding-top: 20px;
    color: #666;
    display: flex;
}

.setting .common {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    color: #999;
}

.empty {
    padding-top: 60px;
    color: #666;
    text-align: center;
}

.user_avtar {
    padding-left: 32rpx;
    display: flex;
    align-items: center;
}

.user_avtar .avtar {
    width: 72rpx;
    height: 72rpx;
}

.userName {
    font-size: 10px;
    margin-left: 12px;
    color: #666;
}

.getInfo {
    font-size: 10px;
    margin-left: 12px;
    color: #666;
    line-height: 18px;
    display: flex;
    align-items: center;
}

.background {
    box-sizing: border-box;
    width: 200rpx;
    padding-left: 40rpx;
    /* background-color: rgb(153, 153, 153,.4); */
    background: linear-gradient(60deg, #009688, yellowgreen, pink, #03a9f4, #9c27b0, #8bc34a);
    height: 28px;
    line-height: 28px;
    border-bottom-left-radius: 14px;
    border-top-left-radius: 14px;
    font-size: 14px;
}

.selectBackground {
    position: fixed;
    bottom: 48px;
    left: 0;
    height: 154px;
    width: 100%;
    background-color: #fff;
    padding: 0 10px;
    padding-top: 30px;
    padding-bottom: 14px;
    box-sizing: border-box;
    border-top-left-radius: 12px;
    border-top-right-radius: 12px;
}

.selectImg {
    height: 110px;
    width: 75px;
    border-radius: 8px;
    overflow: hidden;
    margin-right: 8px;
    position: relative;
    display: inline-block;
    /* background-color: chartreuse; */
}

.selectImg:first-child::after {
    content: "默认背景";
    position: absolute;
    bottom: 8rpx;
    right: 2px;
    font-size: 14px;
    color: #999;
}

.addImg {
    box-sizing: border-box;
    border: 1px solid #ccc;
    font-size: 12px;
    color: #999;
    text-align: center;
}

.addImg view {
    margin-bottom: 2px;
}

.delIcon {
    position: absolute;
    right: 20px;
    top: 6px;
    color: #999;
}

.collect {
    position: fixed;
    top: 0;
    left: 0;
    background-color: #fff;
    padding: 4px 10px;
    z-index: 33;
    border-radius: 12px;
    font-size: 14px;
}
.collect::after {
    content: "";
    display: block;
    /* width: 20px;
    height: 20px; */
    border-top: 10px solid #fff;
    border-left: 10px solid #fff;
    border-right: 10px solid transparent;
    border-bottom: 10px solid transparent;
    position: absolute;
    top: -10px;
    left: 50%;
    transform: translateX(-50%);
    transform: rotate(45deg);
}