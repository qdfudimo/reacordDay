/* pages/mine/index.wxss */
.container {
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
  position: relative;
}

.background_image {
  position: absolute;
  width: 100%;
  height: 100%;
}

.main {
  box-sizing: border-box;
  min-height: 0px;
  color: #fff;
  z-index: 9999;
  position: relative;
  z-index: 1;
}

.con {
  box-sizing: border-box;
  width: 100%;
  top: 0;
  display: flex;
  background-color: transparent;
}

.content {
  width: 100%;
}

.content_top {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.user_avtar {
  padding-left: 32rpx;
  /* width: 100%; */
}

.user_avtar .avtar {
  width: 80rpx;
  height: 80rpx;
}

.background {
  box-sizing: border-box;
  width: 200rpx;
  padding-left: 40rpx;
  /* background-color: rgb(153, 153, 153,.4); */
  background: linear-gradient(60deg, #009688, yellowgreen, pink, #03a9f4, #9c27b0, #8bc34a);
  height: 28px;
  line-height: 28px;
  border-bottom-left-radius: 14px;
  border-top-left-radius: 14px;
  font-size: 14px;
}