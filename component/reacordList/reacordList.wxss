.schedule_bottom {
    display: flex;
    margin-top: 10px;
}

.share {
    flex: 1;
    color: #666;
}

.comment {
    flex: 1;
    color: #666;
    text-align: center;
}

.likeCount {
    flex: 1;
    color: #666;
    display: flex;
    align-items: center;
    justify-content: flex-end;
}

/* box-shadow: 0rpx 4rpx 10rpx 0rpx rgba(85, 85, 85, 0.10); */
.pictures {
    margin-top: 14px;
    padding: 0 20rpx 10rpx;
    box-sizing: border-box;
    display: flex;
    justify-content: flex-start;
    flex-wrap: wrap;
}

.picture {
    border-radius: 8px;
    overflow: hidden;
    background-color: yellowgreen;
    width: calc(33.33% - 8rpx);
    margin-right: 12rpx;
}

.picture:nth-child(3n) {
    margin-right: 0px;
}

.picture image {
    width: 100%;
    height: 100%;
    /* border: 1px solid #efefef; */
}