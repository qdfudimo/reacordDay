.schedule_view {
    background-color: #fff;
    width: calc(100% - 40px);
    margin: 0 8px 12px 8px;
    padding: 12px;
    border-radius: 10px;
    display: flex;
    flex-direction: column;
    overflow: hidden;
}

.schedule_view:last-child {
    margin-bottom: 26px;
}

.schedule_top {
    font-size: 12px;
    display: flex;
    align-items: center;
    color: #666;
    margin-bottom: 10px;
}

.schedule_avatr {
    margin: 0 10px;
    width: 32px;
    height: 32px;
    border-radius: 50%;
}

.userName {
    font-size: 14px;
    color: #000;
}

.issue_time {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.schedule_left {
    display: flex;
    flex-direction: column;
    text-align: center;
}

.user_time {
    margin-top: 8px;
    color: #666;
}

.schedule_content {
    flex: 1;
    padding-left: 8px;
    font-size: 14px;
    color: #111;
    padding-left: 10px;
}

